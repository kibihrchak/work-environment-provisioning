{
  "_comment": "Provision PlatformIO env to Ubuntu installation",
  "builders": [
    {
      "type": "virtualbox-vm",
      "vm_name": "{{user `vm_name`}}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "headless": "{{ user `headless` }}",
      "attach_snapshot": "{{ user `attach_snapshot` }}",
      "target_snapshot": "{{ user `target_snapshot` }}",
      "ssh_wait_timeout": "10000s",
      "skip_export": "true",
      "post_shutdown_delay": "1m",
      "guest_additions_mode": "disable",
      "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{ user `json_name` }}/files",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "expect_disconnect": "true",
      "environment_vars": [
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "UPGRADE={{user `upgrade`}}"
      ],
      "scripts": [
        "{{ user `json_name` }}/scripts/install-pio.sh",
        "{{ user `json_name` }}/scripts/install-codium.sh"
      ]
    }
  ],
  "variables": {
    "json_name": "provision-ubuntu-vm",
    "headless": "false",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "attach_snapshot": "base",
    "target_snapshot": "provisioned",
    "upgrade": "false"
  }
}
